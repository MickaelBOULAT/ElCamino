{
  "name": "myapp",
  "version": "1.0.0",
  "description": "App written with splay.js (https://gaas.canal-plus.com/projects/FTV/repos/splay/browse)",
  "main": "index.js",
  "jest": {
    "collectCoverage": true,
    "verbose": true,
    "coverageReporters": [
      "html"
    ],
    "setupFiles": [
      "<rootDir>/src/polyfills.js"
    ],
    "moduleNameMapper": {
      "^@assets/(.*)$": "<rootDir>/src/assets/$1",
      "^@components/(.*)$": "<rootDir>/src/components/$1",
      "^@connector$": "<rootDir>/src/connector.js",
      "^@constants$": "<rootDir>/src/constants.js",
      "^@css/(.*)$": "<rootDir>/src/css/$1",
      "^@stores/(.*)$": "<rootDir>/src/stores/$1"
    },
    "transform": {
      "^.+\\.(less)$": "<rootDir>/jest/stylemock.js",
      "^.+\\.(jpg|png)$": "<rootDir>/jest/filemock.js",
      "^.+\\.jsx?$": "babel-jest"
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/polyfills.js",
      "<rootDir>/node_modules"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js"
    ]
  },
  "scripts": {
    "build": "npm run clean && node build-cli",
    "clean": "rm -Rf ./dist/*",
    "doc": "jsdoc ./src -r -d ./docs",
    "isoprod": "npm run clean && node build-cli isoprod",
    "start": "node build-cli devserver",
    "test": "rm -Rf ./coverage && jest",
    "unit": "rm -Rf ./coverage && jest --verbose false"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.5.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-jsx": "^7.2.0",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^5.2.0",
    "commander": "^3.0.0",
    "compression": "^1.7.3",
    "compression-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "eslint": "^6.2.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "express": "^4.17.0",
    "file-loader": "^4.2.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "ignore-loader": "^0.1.2",
    "imagemin-webpack-plugin": "^2.4.2",
    "jest": "^24.9.0",
    "jsdoc": "^3.6.3",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "pem": "^1.14.3",
    "style-loader": "^1.0.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.39.3",
    "webpack-dev-server": "^3.8.0"
  },
  "dependencies": {
    "core-js": "^3.2.1",
    "isomorphic-fetch": "^2.2.1",
    "regenerator-runtime": "^0.13.3",
    "splay": "^2.1.10"
  }
}
